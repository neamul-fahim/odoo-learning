<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <template id="portal_vendor" name="Vendor" inherit_id="portal.portal_my_home">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="before">
            <t t-if="request.env.user.has_group('base.group_portal')">
                <t t-call="portal.portal_docs_entry">
                    <t t-set="title">Vendor Account</t>
                    <t t-set="url" t-value="'/my/vendor_account'"/>
                    <t t-set="text">Follow, view or pay your orders</t>
                    <t t-set="placeholder_count" t-value="'vendor_count'"/>
                </t>
            </t>

                <t t-call="portal.portal_docs_entry">
                    <t t-set="title">Vendor Dashboard</t>
                    <t t-set="url" t-value="'/my/vendor_dashboard'"/>
                    <t t-set="text">Follow, view or pay your orders</t>
                    <t t-set="placeholder_count" t-value="'vendor_dashboard'"/>
                </t>
        </xpath>
    </template>

