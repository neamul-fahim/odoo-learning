<odoo>
    <record id="view_oauth2_provider_form" model="ir.ui.view">
        <field name="name">auth.oauth2.provider.form</field>
        <field name="model">auth.oauth2.provider</field>
        <field name="arch" type="xml">
            <form string="OAuth2 Provider Configuration">
                <group>
                    <field name="name"/>
                    <field name="client_id"/>
                    <field name="client_secret"/>
                    <field name="auth_endpoint"/>
                    <field name="token_endpoint"/>
                    <field name="userinfo_endpoint"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_oauth2_provider_tree" model="ir.ui.view">
        <field name="name">auth.oauth2.provider.tree</field>
        <field name="model">auth.oauth2.provider</field>
        <field name="arch" type="xml">
            <tree string="OAuth2 Providers">
                <field name="name"/>
            </tree>
        </field>
    </record>


</odoo>
