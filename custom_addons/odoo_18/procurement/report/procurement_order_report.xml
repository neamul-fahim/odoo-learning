<odoo>
    <record id="action_procurement_order_report" model="ir.actions.report">
        <field name="name">Procurement Order</field>
        <field name="model">procurement.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">procurement.report_procurement_order</field>
        <field name="binding_model_id" ref="model_procurement_order"/>
    </record>


    <template id="report_procurement_order">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Procurement Order Report</h2>
                    <p>
                        <strong>Order Reference:</strong>
                        <t t-esc="docs.name"/>
                    </p>
                    <p>
                        <strong>Order Date:</strong>
                        <t t-esc="docs.order_date"/>
                    </p>
                    <p>
                        <strong>Total Amount:</strong>
                        <t t-esc="docs.total_amount"/>
                        Taka
                    </p>

                    <h3>Order Lines</h3>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Unit Price</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs.order_line_ids" t-as="line">
                                <tr>
                                    <td>
                                        <t t-esc="line.product_id.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="line.quantity"/>
                                    </td>
                                    <td>
                                        <t t-esc="line.unit_price"/>
                                        Taka
                                    </td>
                                    <td>
                                        <t t-esc="line.quantity * line.unit_price"/>
                                        Taka
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <div style="margin-top: 20px;">
                        <p>
                            <strong>Approved by:</strong>
                        </p>
                        <img t-if="docs.state in ('approved', 'completed')"
                             t-att-src="'/your_module_name/static/src/img/signature.png'" width="150"/>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
